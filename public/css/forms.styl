@import 'variables'

fieldset
  border none
  margin 0 auto
  background transparent
  padding 0

input[type='text'],
input[type='email'],
textarea,
#search-button
  width 100%


#search-button span
  font-size 1.4em
  height 2.4em
  padding 9px 12px

input[type='text'],
input[type='email'],
textarea
  min-height 36px
  padding 4% 4%
  font-size 1.4em
  color $black
  outline 1px solid $black
  background-color transparent
  border none
  font-family: Helvetica, Arial
  normTransition(all 0.10s ease-in-out)

normPlaceholdercolor($black, Helvetica, Arial, sans-serif)

input[type='text']:focus,
input[type='email']:focus,
textarea:focus
  outline 2px solid $blue

#contact-form-container
  width 35%


#contact-form
  margin 15% auto

.form-item
  padding 3.5% 0
  margin 0 auto

.form-item:last-child
  margin 0% auto 2%

form .error
  border $red 4px solid
