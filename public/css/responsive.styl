@import 'variables'

/* 1em = 16px */

/* 768px */
@media only screen and (max-width: 48em)

  body
    font-size 100%

  #contact-form-container
  	width 50%
  	display inline-block
  	float left

	#contact-form
	  margin 8% auto


/* 640px */
@media only screen and (max-width: 40em)

  body
    font-size 100%

  #contact-form-container
  	width 85%
  	display inline-block
  	float left

	#contact-form
	  margin 8% auto



/* 480px */
@media only screen and (max-width: 30em)

